/* Raswanth 
 * class: RectangleArea3
 * Execution of the program: calculates and displays the area of a rectangle based on the values entered by the user
 */
/** 
 * The class, RectangleArea3 is an application that 
 * calculates and displays the area of a rectangle 
 * based on the values entered by the user
 */
import java.util.Scanner; 
public class RectangleArea3 {
  //start class definition 
  public static void main(String[] args) {
    //create the object 
    Scanner input = new Scanner(System.in);
    //declare variables
    int length; //longer side of the rectangle 
    int width; //shorter side of the rectangle 
    int area; //calculated area of rectangle 
    //initialize variables and get the inputs from the user 
    System.out.print("Enter the length(cm): "); 
    length = input.nextInt(); 
    System.out.print("Enter the width(cm): "); 
    width = input.nextInt();
    input.close(); 
    //make the calculations
    area = length * width; 
    //display the results 
    System.out.println("Entered length: " + length + " cms");
    System.out.println("Entered width: " + length +  " cms");
    System.out.println("Area of rectangle: " + area + " cms"); 
  }
} //end class definition
